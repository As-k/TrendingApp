<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/profile_pic_view"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:background="@drawable/profile_image_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/name_view"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_21dp"
        android:background="@drawable/shimmer_text_view_shape"
        app:layout_constraintStart_toEndOf="@id/profile_pic_view"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/repository_view"
        android:layout_width="@dimen/dimen_260dp"
        android:layout_height="@dimen/dimen_14dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/shimmer_text_view_shape"
        app:layout_constraintStart_toEndOf="@id/profile_pic_view"
        app:layout_constraintTop_toBottomOf="@id/name_view" />

    <View
        android:id="@+id/gray_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_21dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repository_view" />
</androidx.constraintlayout.widget.ConstraintLayout>