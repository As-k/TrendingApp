<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
     * Drop Shadow Stack with shape
     * for particular corner curve, change radius of each
        item to the particular corner radius
     * for shadow to appear in particular side, remove other sides
        from padding
    -->

    <item>
        <shape>
            <solid android:color="#ECECEC" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#DAD6D6" />

        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="0.5dp" />

            <solid android:color="#D5D5D5" />

        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="0.5dp" />


            <solid android:color="#FCFCFC" />

        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="0.5dp" />

            <solid android:color="#C7C7C7" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#D8D6D6" />
            <padding android:bottom="0.5dp" />

        </shape>
    </item>

    <!-- Background layer - change solid color for background color -->

    <item>

        <shape>

            <solid android:color="@color/white" />
            <padding android:bottom="0.5dp" />

        </shape>


    </item>

</layer-list>